{
  "manifest_version": 2,

  "name": "deep-search",
  "description": "Search current page and links for strings or regex",
  "version": "0.0.1",
  "background": {
    "scripts": [
      "lib/jquery-2.2.4.min.js",
      "background/pageScraper.js"
    ],
    "persistant": false 
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [ 
        "lib/jquery-2.2.4.min.js", 
        "content/highlightMatches.js",
        "content/matchedLinks.js" 
      ]
    }
  ],

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup/default.html"
  },

  "permissions": [
    "<all_urls>"
  ]
}
