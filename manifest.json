{
  "manifest_version": 2,

  "name": "deep-search",
  "description": "Search current page and links for strings or regex",
  "version": "0.0.1",
  "background": {
    "scripts": [
      "lib/jquery-2.2.4.min.js",
      "background/pageScraper.js"
    ],
    "persistant": false
  },
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [
        "lib/jquery-2.2.4.min.js",
        "lib/bootstrap-3.3.6-dist/js/bootstrap.min.js",
        "lib/findAndReplaceDOMText.js",
        "content/matchedLinks.js",
        "content/highlightMatches.js"
      ],
      "css": [ "content/highlightMatches.css" ]
    }
  ],

  "browser_action": {
    "default_icon": "assets/icon.png",
    "default_popup": "popup/default.html"
  },

  "permissions": [
    "<all_urls>"
  ]
}
